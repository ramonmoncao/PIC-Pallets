generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
  password String
  tasks Order[]
  
}
model Order{
  id Int @id @default(autoincrement())
  date DateTime
  status String
  userId Int
  user User @relation(fields: [userId], references: [id])
  items Items[]
  payment Payment[]
}
model Product{
  id Int @id @default(autoincrement())
  name String
  width Int
  length Int
  capacity Int
  price Float
  img String
  item Items[]
}
model Items{
  id Int @id @default(autoincrement())
  quantity Int
  price Float
  subtotal Float
  orderId Int
  products Product[]
  order Order  @relation(fields: [orderId], references: [id]) 
}
model Payment{
  id Int @id @default(autoincrement())
  value Float
  date DateTime
  orderId Int
  order Order @relation(fields: [orderId], references: [id])
}
