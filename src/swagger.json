{
    "openapi": "3.0.0",
    "info":{
        "title": "APÌ Todo List",
        "version": "1.0.0",
        "descritption": "API de Tarefas"

    },
    "servers":[
        {"url": "http://localhost:3000/api"}
    ],
    "paths":{
        "/users":{
            "get": {
                "summary": "Lista todos os usuários",
                "responses":{
                    "200":{
                        "descritption": "Sucesso",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schema/User"
                                    }
                                }
                            }
                        }
                    }
                }
            }
          },
          "/products": {
                "post": {
                    "summary": "Adicionar produto",
                    "requestBody": {
                        "required": true,
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schema/CreateProductsDto"
                                }
                            }
                        }
                    },
                    "responses": {
                        "201": {
                            "description": "Sucesso",
                            "content":{
                                "application/json": {
                                    "schema": {
                                        "$ref": "#/components/schema/Products"
                                    }
                                }
                            }
                        },
                        "400": {
                            "description": "Erro",
                            "content": {
                                "application/json": {
                                    "schema": {
                                        "type": "object",
                                        "properties": {
                                            "message": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        
                        }
                    }
                }
            }

        }
    },
    "components": {
      "schemas": {
        "User": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          }
        }, 
        "CreateUserDto": {
            "type": "object",
            "properties": {
                "name": {
                "type": "string"
                },
                "email": {
                "type": "string"
                },
                "password": {
                "type": "string"
                }
            }
        }
        "Products": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "width": {
                    "type": "int"
                },
                "lenght": {
                    "type": "int"
                },
                "capacity":{
                    "type": "int"
                },
                "price": {
                    "type": "float"
                }
            }
        },
        "CreateProductDto": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "width": {
                    "type": "number"
                },
                "lenght": {
                    "type": "number"
                },
                "capacity":{
                    "type": "number"
                },
                "price": {
                    "type": "number"
                }
            }
        }
    }
}